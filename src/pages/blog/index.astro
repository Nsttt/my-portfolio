---
import Card from "../../components/card.astro";
import BaseLayout from "../../layouts/baseLayout.astro";
import type { PostFrontmatter } from "../../types/post.domain";

const posts = await Astro.glob<PostFrontmatter>("../../content/posts/*.md");
---

<BaseLayout>
  <h1 class="mt-32 text-4xl">Blog</h1>
  <ul
    role="list"
    class="mt-10 grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-3 xl:gap-x-8"
  >
    {
      posts.map((post) => (
        <Card title={post.frontmatter.title} image={post.frontmatter.image} />
      ))
    }
  </ul>
</BaseLayout>
