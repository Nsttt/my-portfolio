---
import BaseLayout from "../layouts/baseLayout.astro";
import Card from "../components/card.astro";

const pageTitle = "Néstor López - Software Engineer";
const description = "";

interface Frontmatter {
  title: string;
  description: string;
  image: string;
  subtitle: string;
  date: string;
}

const posts = await Astro.glob<Frontmatter>("../content/posts/*.md");
---

<BaseLayout title={pageTitle} description={description}>
  <div
    class="flex flex-col-reverse sm:flex-row max-w-6xl md:mx-auto mx-3 items-start my-20"
  >
    <div class="my-auto">
      <h1 class="font-extrabold text-5xl tracking-wide">
        Hey, I'm <span class="text-feat-primary"> Néstor</span>
      </h1>
      <h2 class="mt-2 text-lg">Full-stack developer and Typescript wizard.</h2>
      <p class="mt-4 max-w-lg text-neutral-700 dark:text-neutral-400">
        Frontend Engineer at <a
          href="https://nexiona.com/"
          target="_blank"
          rel="noreferrer"
          class="hover:transition ease-in-out font-bold hover:text-gray-400 dark:hover:text-gray-600"
        >
          NEXIONA
        </a>
      </p>
      <a
        href="/projects"
        class="inline-flex items-center mt-6 py-2 px-3 text-md font-medium text-center bg-feat-primary rounded-lg hover:bg-feat-secondary focus:ring-4 focus:outline-none focus:ring-red-300"
      >
        See my work
        <svg
          aria-hidden="true"
          class="ml-2 -mr-1 w-4 h-4"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
    <div class="ml-auto md:block hidden">
      <img src="/images/hero.svg" width={650} />
    </div>
  </div>
  <div class="bg-black-secondary py-6">
    <div class="max-w-6xl md:mx-auto mx-3">
      <h3 class="font-bold text-2xl md:text-4xl mb-6">Lastest Posts</h3>
      {
        posts.slice(0, 3).map((post) => (
          <div class="flex flex-row space-x-4">
            <Card
              title={post.frontmatter.title}
              description={post.frontmatter.description}
              src=""
              href=""
            />
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>
