---
import BaseLayout from "../layouts/baseLayout.astro";
const pageTitle = "Néstor López - Software Engineer";
const description = "";
---

<BaseLayout siteTitle={pageTitle} description={description}>
  <div class="flex flex-col-reverse sm:flex-row items-start mb-10">
    <div>
      <h1 class="font-extrabold text-5xl tracking-wide">
        <span>Néstor</span>
        López
      </h1>
      <h4 class="text-sm text-neutral-700 dark:text-neutral-400">
        Building software for humans.
      </h4>
      <h2 class="mt-1 text-lg">
        Frontend Engineer at
        <a
          href="https://nexiona.com/"
          target="_blank"
          rel="noreferrer"
          class="hover:transition ease-in-out font-bold hover:text-gray-400 dark:hover:text-gray-600"
        >
          NEXIONA
        </a>
      </h2>
      <p class="mt-4 max-w-lg text-neutral-700 dark:text-neutral-400">
        Writing about the present and developing the future.
      </p>
    </div>
    <div class="ml-auto md:block hidden">
      <img
        src="/images/portrait.jpeg"
        alt="Nestor Lopez"
        height={175}
        width={175}
        class="rounded-full object-cover"
      />
    </div>
  </div>
  <div>
    <h3 class="font-bold text-2xl md:text-4xl mb-6">Latest Stuff</h3>
  </div>
</BaseLayout>
