---
import dayjs from "dayjs";

interface Props {
  href: string;
  title: string;
  description: string;
  date: string;
  expectedReadTime?: number;
  eventName?: string;
  eventProps?: string;
}

const {
  href,
  title,
  description,
  date,
  expectedReadTime,
  eventName,
  eventProps,
} = Astro.props;
const formatedDate = dayjs(date).format("MMMM DD, YYYY");
---

<div
  class="hover:bg-mono-300/20 dark:hover:bg-mono-700/20 rounded-lg p-2 transition duration-200 ease-linear hover:-translate-y-2"
>
  <a
    rel="prefetch"
    href={href}
    onclick={eventName
      ? `window.umami.track('${eventName}'${eventProps ? `, { ${eventProps.split("=")[0]}: '${eventProps.split("=")[1]?.replace(/'/g, "\\'")}' }` : ""})`
      : undefined}
  >
    <div class="flex flex-col gap-y-2">
      <h3 class="text-cool-grey-900 dark:text-mono-100 text-2xl font-bold">
        {title}
      </h3>
      <p class="text-black dark:text-slate-200">{description}</p>
      <span class="text-cool-grey-600 dark:text-cool-grey-400 flex gap-x-4">
        <span>{formatedDate}</span>
        {expectedReadTime > 0 && (
          <>
            <span>•</span>
            <span>
              {"☕".repeat(expectedReadTime).substring(0, 5)}
              {`${expectedReadTime.toString()} min read`}
            </span>
          </>
        )}
      </span>
    </div>
  </a>
</div>
