---
import { Image } from "@astrojs/image/components";
import dayjs from "dayjs";

interface Props {
  href: string;
  title: string;
  image: string;
  date: string;
  expectedReadTime: string;
}

const { href, title, image, date, expectedReadTime } = Astro.props;
const formatedDate = dayjs(date).format("MMMM DD, YYYY");
---

<div
  class="rounded-lg border-2 border-light-blue-vivid-500/0 p-2 transition duration-200 ease-linear hover:-translate-y-4 hover:border-light-blue-vivid-500/100"
>
  <a href={href}>
    <Image
      class="h-52 w-full overflow-hidden rounded-lg object-cover"
      height={208}
      width={370}
      src={image}
      alt={title}
    />
    <div class="py-5">
      <span class="text-slate-400"
        >{`${formatedDate} â€¢ ${expectedReadTime}`}
      </span>
      <h3 class="text-2xl font-bold">
        {title}
      </h3>
    </div>
  </a>
</div>
