---
import dayjs from "dayjs";

import BaseLayout from "./baseLayout.astro";

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    expectedReadTime: number;
    image: string;
    tags: string[];
  };
}

const {
  frontmatter: { title, description, pubDate, expectedReadTime, image },
} = Astro.props;

const formatedDate = dayjs(pubDate).format("MMMM DD, YYYY");

const theme = localStorage.getItem("theme") ?? "dark";
---

<BaseLayout title={title} description={description} ogImage={image}>
  <article
    class="prose prose-slate mt-20 max-w-none dark:prose-invert lg:prose-xl prose-a:text-light-blue-vivid-400 prose-a:no-underline hover:prose-a:underline"
  >
    <h1>{title}</h1>
    <span>
      <time>{formatedDate}</time>
      •
      <span>
        {"☕".repeat(expectedReadTime).substring(0, 5)}
        {`${expectedReadTime.toString()} min read`}
      </span>
    </span>
    <img class="w-full object-cover shadow-lg" src={image} alt={title} />
    <slot />
    <script
      is:inline
      src="https://giscus.app/client.js"
      data-repo="Nsttt/my-portfolio"
      data-repo-id="MDEwOlJlcG9zaXRvcnkyOTM4NTk0Mjk="
      data-category="Comments"
      data-category-id="DIC_kwDOEYPwZc4CVJ8A"
      data-mapping="pathname"
      data-strict="1"
      data-reactions-enabled="1"
      data-emit-metadata="0"
      data-input-position="top"
      data-theme={theme === "dark" ? "dark_protanopia" : "light_protanopia"}
      data-lang="en"
      data-loading="lazy"
      crossorigin="anonymous"
      async
    ></script>
  </article>
</BaseLayout>
