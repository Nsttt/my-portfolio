{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["ESNext"],
    "target": "ESNext",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "types": ["astro/client"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/components"]
    }
  }
}
